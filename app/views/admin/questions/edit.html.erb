<div class="app_contain">
  <div class="container">
    <%= form_for @question, url: admin_question_path, method: 'put' do |f| %>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">题目内容</label>
        <div class="col-sm-10">
          <%= f.text_area :content, rows: 8, cols: 80, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">选择正确答案</label>
        <div class="col-sm-10">
          <% @question.question_options.each.with_index(1) do |option, i| %>
            <div class="[ form-group ]">
                  <input type="checkbox" name="question[result][]" id="question-option-<%= option.id%>" <%= 'checked' if @question.result.include?(option.id.to_s) %> value="<%= option.id %>" autocomplete="off" />
                <div class="[ btn-group ]">
                    <label for="question-option-<%= option.id%>" class="[ btn btn-success ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span> </span>
                    </label>
                    <label for="question-option-<%= option.id%>" class="[ btn btn-default active ]">
                        <%= option.content %>
                    </label>
                </div>
                </br>
            </div>
          <% end %>
        </div>
      </div>

      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit "确定", class: 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
